@page
@model MyVideoGameUI.Pages.Account.LoginModel
@{
}

<div class="container border p-3">
    <form method="post">
        <div class="row mb-3">
            <div class="col-sm-2">
                <label asp-for="LoginInfo.Email" class="form-label"></label>
            </div>
            <div class="col-sm-10">
                <input type = "text" class="form-control" asp-for="LoginInfo.Email">
                <span class="text-danger" asp-validation-for="LoginInfo.Email"> </span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-2">
                <label asp-for="LoginInfo.Password" class="form-label"></label>
            </div>
            <div class="col-sm-10">
                <input type = "text" class="form-control" asp-for="LoginInfo.Password">
                <span class="text-danger" asp-validation-for="LoginInfo.Password"> </span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-2">
                <button type ="submit" class="btn btn-primary">Login</button>
            </div>
        </div>
    </form>
</div>