@page
@model MyVideoGameUI.Pages.Languages.AddLanguageModel
@{
    ViewData["Title"] = "Add Language";
}

<form method="post">
    <div class="container pt-3">
        <div class="row mb-3">
        <div class="col-sm-4">
            <h2 class="text-primary">Add New Language</h2>
        </div>
        </div>
        <div class="row mb-3">
            <label for="inputLanguageName" class="col-sm-4 form-label">Language Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputGenreName" asp-for="NewLanguage.LanguageName"/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Language</button>
    </div>
</form>