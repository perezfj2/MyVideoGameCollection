@page
@model MyVideoGameUI.Pages.VideoGames.IndexModel
@{
    ViewData["Title"] = "Video Game List";
}


<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <h2>Video Game List</h2>
        </div>
        <div class="col-sm-9">
            <a class="btn btn-primary" asp-page="AddVideoGame">Add Video Game</a>
        </div>
    </div>


    @foreach (var game in Model.GameDetailList)
    {
        <div class="row mb-3 border-bottom border-success">
            <div class="col-sm-3">
                <form method="post">
                    <a asp-page="EditVideoGame" asp-route-id="@game.GameId" class="btn btn-primary">
                        <img src="@game.GameImageURL" class="card-img" alt="@game.GameTitle">
                        <!-- <i class="bi bi-pencil-square"></i>Edit Game -->
                    </a>
                    <button type="submit" asp-route-id="@game.GameId" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete this?')">
                        <i class="bi bi-archive-fill"></i>Delete Game
                    </button>
                </form>
            </div>
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h3>@game.GameTitle</h3>
                    </div>
                    <div class="col-sm-6 mt-2">
                        <h4>Genre: Genre goes here</h4>
                    </div>
                    <div class="col-sm-6 mt-2">
                        <h4>Player mode: @game.PlayerModeName</h4>
                    </div>
                    <div class="col-sm-6 mt-2">
                        <h4>Content Rating: @game.ContentRatingName</h4>
                    </div>
                    <div class="col-sm-6 mt-2">
                        <h4>Available on: Consoles goes here</h4>
                    </div>
                    <div class="col-sm-6 mt-2">
                        <h4>Language: @game.LanguageName</h4>
                    </div>
                    <div class="col-sm-12 mt-2">
                        <h4>Game Summary:</h4>
                    </div>
                    <div class="col-sm-12">
                        @game.GameSummary
                    </div>
                </div>
            </div>
            <div class="card-body text-start">
                <h5 class="card-title mb-2">@game.GameTitle</h5>
                <h5 class="card-title mb-0">Rating: @game.GameRating / 10</h5>
            </div>
            <div class="col-sm-12 mt-2">

            </div>
        </div>

        
    }
    </>
