    </div>

    

    <!-- Add more categories and games here -->

<script>
  // Get the arrow element and attach an event listener to it
  var arrow = document.querySelectorAll('.arrow');
  for (var i = 0; i < arrow.length; i++) {
    arrow[i].addEventListener('click', function() {
      // Get the games container and calculate the new position
      var container = this.parentNode.querySelector('.games');
      var currentPosition = container.scrollLeft;
      var newPosition = currentPosition + container.offsetWidth;
      // Animate the scrolling to the new position
      container.scrollTo({
        left: newPosition,
        behavior: 'smooth'
      });
    });
  }
</script>

</body>
</html>


