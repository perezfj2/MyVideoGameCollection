                                <img src="@game.GameImageURL" alt="@game.GameTitle">
                                <!-- <i class="bi bi-pencil-square"></i>Edit Game -->
                            </a>
                        </form>

                        <h3>@game.GameTitle</h3>

                    </div>
                }
            </div>
            <div class="arrow-container">
                <div class="arrow"></div>
            </div>
        </div>
        <h2>Single Player Games</h2>
        <div class="games-container">
            <div class="games">
