@page
@model MyVideoGameUI.Pages.Genres.AddGenreModel
@{
    Layout = "_AuthenticatedLayout";
    ViewData["Title"] = "Add Genre";
}

<form method="post">
    <div class="container pt-3">
        <div class="row mb-3">
        <div class="col-sm-4">
            <h2 class="text-primary">Add New Genre</h2>
        </div>
        </div>
        <div class="row mb-3">
            <label for="inputGenreName" class="col-sm-4 form-label">Genre Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputGenreName" asp-for="NewGenre.GenreName"/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Genre</button>
    </div>
</form>
