@page
@model MyVideoGameUI.Pages.Consoles.IndexModel
@{
    ViewData["Title"] = "Console List";
}


<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <h2>Consolole List</h2>
        </div>
        <div class="col-sm-9">
            <a class="btn btn-primary" asp-page="AddConsole">Add Console</a>
        </div>
    </div>


    @foreach (var obj in Model.ConsoleList)
    {

        <div class="row">
            <!-- Team Member 1 -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <img src="@obj.ConsoleImageURL" class="card-img-top" alt="@obj.ConsoleName">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-0" style="color:black">@obj.ConsoleName</h5>
                    </div>

                </div>

                <div class="col-sm-12 mt-2" align="center">
                    <form method="post">
                        <a asp-page="EditConsole" asp-route-id="@obj.ConsoleId" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>Edit Console
                        </a>
                        <button type="submit" asp-route-id="@obj.ConsoleId" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this?')">
                            <i class="bi bi-archive-fill"></i>Delete Console
                        </button>
                    </form>
                </div>
            </div>

        </div>



    }
    </>
