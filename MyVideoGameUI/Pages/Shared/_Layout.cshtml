<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyVideoGame</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyVideoGameU.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body style="height: 100%;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-black border-bottom box-shadow mb-3 navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-family: 'Segoe Print'"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSjsa-TkKv8Z-eN1kF0sGkeX3IkzJtfna-1RQ&usqp=CAU" class="img-center" height="50" width="50" />VideoGameCatalog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-page="/Search/Index">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Browse_Page/Index">Browse</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Add Items</a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Publishers/Index">Publishers</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/VideoGames/Index">Video Games</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Consoles/Index">Consoles</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Genres/Index">Genres</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Languages/Index">Languages</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/ContentRatings/Index">Content Ratings</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/PlayerModes/Index">Player Modes</a></li>

                            </ul>
                         </li>
                        </div>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Account/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer" style="background-color: black; color: white; height: 50px; position: absolute; width: 100%">
            &copy; 2023 - VideoGameCatalog - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>