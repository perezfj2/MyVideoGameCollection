@page
@model MyVideoGameUI.Pages.VideoGames.DetailPageModel
@{
}



@foreach (var game in Model.GameDisplayList)
{
    <div class="row mb-3 border-bottom border-success">
        <div class="col-sm-3">
            <img src="@game.GameImageURL" class="card-img" alt="@game.GameTitle">
        </div>
        <div class="col-sm-9">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h3>@game.GameTitle</h3>
                </div>
                <div class="col-sm-6 mt-2">
                    <h4>Genre: Genre goes here</h4>
                </div>
                <div class="col-sm-6 mt-2">
                    <h4>Player mode: @game.PlayerModeName</h4>
                </div>
                <div class="col-sm-6 mt-2">
                    <h4>Content Rating: @game.ContentRatingName</h4>
                </div>
                <div class="col-sm-6 mt-2">
                    <h4>Available on: Consoles goes here</h4>
                </div>
                <div class="col-sm-6 mt-2">
                    <h4>Language: @game.LanguageName</h4>
                </div>
                <div class="col-sm-12 mt-2">
                    <h4>Game Summary:</h4>
                </div>
                <div class="col-sm-12">
                    @game.GameSummary
                </div>
            </div>
        </div>
        <div class="card-body text-start">
            <h5 class="card-title mb-2">@game.GameTitle</h5>
            <h5 class="card-title mb-0">Rating: @game.GameRating / 10</h5>
        </div>
        <div class="col-sm-12 mt-2">
        </div>
    </div>


}