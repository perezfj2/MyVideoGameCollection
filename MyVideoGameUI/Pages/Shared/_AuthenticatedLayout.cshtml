<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyVideoGameU.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    
    <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-lightblue border-bottom box-shadow mb-3" style=" background-color: lightblue;">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="https://www.kindpng.com/picc/m/19-191345_game-controller-pad-videogame-video-game-icon-png.png" class="img-center" height="50" width="70" />VideoGameCatalog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Search/Index">Search</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Browse</a>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/Publishers/Index">Publishers</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/VideoGames/Index">Video Games</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/Consoles/Index">Consoles</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/Genres/Index">Genres</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/Languages/Index">Languages</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/ContentRatings/Index">Content Ratings</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/PlayerModes/Index">Player Modes</a></li>
                            
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Signout">Sign Out</a>
                    </li>
            </div>

            </ul>
        </div>
        </div>
    </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MyVideoGame - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
