@page
@model MyVideoGameUI.Pages.ContentRatings.AddContentRatingModel
@{
    ViewData["Title"] = "Add Content Rating";
}

<form method="post">
    <div class="container pt-3">
        <div class="row mb-3">
        <div class="col-sm-4">
            <h2 class="text-primary">Add New ContentRating</h2>
        </div>
        </div>
        <div class="row mb-3">
            <label for="inputContentRatingName" class="col-sm-4 form-label">ContentRating Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputContentRatingName" asp-for="NewContentRating.ContentRatingName" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add ContentRating</button>
    </div>
</form>