@page
@model MyVideoGameUI.Pages.PlayerModes.AddPlayerModeModel
@{
    ViewData["Title"] = "Add Player Mode";
}

<form method="post">
    <div class="container pt-3">
        <div class="row mb-3">
        <div class="col-sm-4">
            <h2 class="text-primary">Add New PlayerMode</h2>
        </div>
        </div>
        <div class="row mb-3">
            <label for="inputPlayerModeName" class="col-sm-4 form-label">PlayerMode Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPlayerModeName" asp-for="NewPlayerMode.PlayerModeName" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add PlayerMode</button>
    </div>
</form>
